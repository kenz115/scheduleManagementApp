<h2>スケジュール一覧</h2>

<% if flash.notice %>
    <p class="notice"><%= flash.notice %></p>
<% elsif flash.alert %>
    <p class="alert"><%= flash.alert %></p>
<% end %>

<table>
  <tr>
    <th><%= sort "ID", "id" %></th>
    <th><%= sort "タイトル", "title" %></th>
    <th><%= sort "開始日", "start_date" %></th>
    <th><%= sort "終了日", "end_date" %></th>
    <th><%= sort "終日", "all_day" %></th>
    <th><%= sort "スケジュール更新日時", "updated_at" %></th>
    <th>確認</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
  <% @schedules.each do |schedule| %>
    <% all_day = schedule.all_day === true ? "○" : "" %>
    <tr>
      <td><%= schedule.id %></td>
      <td><%= schedule.title %></td>
      <td><%= schedule.start_date.to_s(:datetime_jp) %></td>
      <td><%= schedule.end_date.to_s(:datetime_jp) %></td>
      <td><%= all_day %></td>
      <td><%= schedule.updated_at.to_s(:datetime_jp) %></td>
      <td><%= link_to "確認", schedule %></td>
      <td><%= link_to "編集", [:edit, schedule] %></td>
      <td><%= link_to "削除", schedule, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "スケジュール新規登録", :new_schedule %>
