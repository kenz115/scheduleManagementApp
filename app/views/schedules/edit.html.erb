<h2>スケジュール編集</h2>

<%= render "shared/error", obj: @schedule %>

<%= form_for @schedule do |f| %>
    <table class="form">
        <tr>
            <th><%= f.label :title, "タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_date, "開始日" %></th>
            <td><%= f.date_field :start_date, id: "start_date" %></td>
        </tr>
        <tr>
            <th><%= f.label :end_date, "終了日" %></th>
            <td><%= f.date_field :end_date, id: "end_date" %></td>
        </tr>
        <tr>
            <th><%= f.label :all_day, "終日" %></th>
            <td>
                <%= f.check_box :all_day %>
                <p>終日の場合はチェックを入れます</p>
            </td>
        </tr>
        <tr>
            <th><%= f.label :memo, "メモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    <%= f.submit "スケジュールの編集を完了する" %>
<% end %>

<%= link_to "スケジュール一覧に戻る", :schedules %>


